---
import Container from '../common/Container.astro';
import Button from '../common/Button.astro';
---

<section class="py-16 lg:py-24 bg-greenberry-600 dark:bg-greenberry-700">
  <Container>
    <div class="max-w-3xl mx-auto text-center">
      <h2 class="text-3xl md:text-4xl font-bold text-white mb-4">Ready to Get Started?</h2>
      <p class="text-xl text-greenberry-100 mb-8">Join Irish organisations running faster, safer sites with Greenberry.</p>
      <div class="flex flex-col sm:flex-row justify-center gap-6">
        <Button href="/contact?service=plans" variant="secondary" size="lg" class="bg-white hover:bg-greenberry-50">
          Start Your Project
          <span class="ml-2"><i class="fa-solid fa-rocket"></i></span>
        </Button>
      </div>
    </div>
  </Container>
</section>
