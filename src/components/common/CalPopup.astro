  <style>
  .cal-floating-button-container {
    position: fixed;
    bottom: 24px;
    right: 24px;
    z-index: 999;
  }

  .cal-floating-button {
    display: flex;
    align-items: center;
    justify-content: center;
    gap: 8px;
    padding: 12px 20px;
    background-color: #16A349;
    color: white;
    border: none;
    border-radius: 50px;
    font-family: system-ui, -apple-system, sans-serif;
    font-weight: 600;
    font-size: 16px;
    cursor: pointer;
    transition: all 0.2s ease;
    box-shadow: 0 4px 10px rgba(0, 0, 0, 0.2);
    /* Ensure button text is always visible by default */
    white-space: nowrap; /* Prevents text from wrapping */
  }

  .cal-floating-button:hover {
    background-color: #138a3d;
    transform: translateY(-2px);
    box-shadow: 0 6px 12px rgba(0, 0, 0, 0.25);
  }

  .cal-floating-button:active {
    transform: translateY(0);
    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
  }

  .calendar-icon {
    display: flex;
    align-items: center;
  }

  /* Responsive adjustments for smaller screens */
  @media (max-width: 768px) {
    .cal-floating-button-container {
      bottom: 16px;
      right: 16px;
    }

    .cal-floating-button {
      padding: 10px 16px; /* Slightly smaller padding for mobile */
      font-size: 14px; /* Slightly smaller font size for mobile */
      /* Remove or comment out the styles that hide text and make the button circular */
      width: auto; /* Reset width */
      height: auto; /* Reset height */
      border-radius: 50px; /* Keep the rounded pill shape */
      justify-content: center; /* Keep content centered */
    }
    
    .button-text {
      display: inline; /* Ensure text is visible on mobile */
    }
    
    .calendar-icon svg {
      width: 20px; /* Keep icon size consistent or adjust as needed */
      height: 20px;
    }
  }

  /* Dark mode support */
  @media (prefers-color-scheme: dark) {
    .cal-floating-button {
      box-shadow: 0 4px 10px rgba(0, 0, 0, 0.4);
    }
    
    .cal-floating-button:hover {
      box-shadow: 0 6px 12px rgba(0, 0, 0, 0.5);
    }
  }
