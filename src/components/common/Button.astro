---
export interface Props {
  href?: string;
  variant?: 'primary' | 'secondary' | 'outline' | 'ghost';
  size?: 'xs' | 'sm' | 'md' | 'lg';
  block?: boolean;
  class?: string;
  [x: string]: any;
}

const {
  href,
  variant = 'primary',
  size = 'md',
  block = false,
  class: className = '',
  ...rest
} = Astro.props;

const variants = {
  primary: 'bg-greenberry-600 hover:bg-greenberry-700 text-white border-transparent shadow-sm hover:shadow',
  secondary: 'bg-gray-100 hover:bg-gray-200 text-gray-800 border-transparent shadow-sm hover:shadow dark:bg-gray-700 dark:hover:bg-gray-600 dark:text-gray-100',
  outline: 'bg-transparent hover:bg-greenberry-50 text-greenberry-600 border-greenberry-600 hover:border-greenberry-700 dark:text-greenberry-400 dark:border-greenberry-400 dark:hover:bg-gray-800',
  ghost: 'bg-transparent hover:bg-gray-100 text-gray-700 border-transparent dark:text-gray-300 dark:hover:bg-gray-800'
};

const sizes = {
  xs: 'px-2.5 py-1 text-xs',
  sm: 'px-3 py-1.5 text-sm',
  md: 'px-4 py-2.5 text-sm',
  lg: 'px-6 py-3 text-base',
};

const classes = [
  'rounded-md font-medium border-2 inline-flex items-center justify-center transition-all duration-300 focus:outline-none focus:ring-2 focus:ring-offset-2 focus:ring-greenberry-500',
  variants[variant],
  sizes[size],
  block ? 'w-full' : '',
  className,
];
---

{href ? (
  <a href={href} class:list={classes} {...rest}>
    <slot />
  </a>
) : (
  <button class:list={classes} {...rest}>
    <slot />
  </button>
)}