---
import Container from '../common/Container.astro';
import type { Suite } from '../../data/suites';

interface Props { suite: Suite }
const { suite } = Astro.props;

const colorClasses = {
  greenberry: {
    icon: 'text-greenberry-600',
    accentBg: 'bg-greenberry-500',
    link: 'text-greenberry-600 hover:text-greenberry-700 dark:text-greenberry-400 dark:hover:text-greenberry-300',
    badge: 'bg-greenberry-100 dark:bg-greenberry-900/50 text-greenberry-800 dark:text-greenberry-300'
  },
  blue: {
    icon: 'text-blue-600',
    accentBg: 'bg-blue-500',
    link: 'text-blue-600 hover:text-blue-700 dark:text-blue-400 dark:hover:text-blue-300',
    badge: 'bg-blue-100 dark:bg-blue-900/50 text-blue-800 dark:text-blue-300'
  },
  purple: {
    icon: 'text-purple-600',
    accentBg: 'bg-purple-500',
    link: 'text-purple-600 hover:text-purple-700 dark:text-purple-400 dark:hover:text-purple-300',
    badge: 'bg-purple-100 dark:bg-purple-900/50 text-purple-800 dark:text-purple-300'
  },
  amber: {
    icon: 'text-amber-600',
    accentBg: 'bg-amber-500',
    link: 'text-amber-600 hover:text-amber-700 dark:text-amber-400 dark:hover:text-amber-300',
    badge: 'bg-amber-100 dark:bg-amber-900/50 text-amber-800 dark:text-amber-300'
  }
} as const;

const colors = colorClasses[suite.color] ?? colorClasses.greenberry;
---

<section class="py-16 lg:py-24 bg-neutral-50 dark:bg-neutral-800/50">
  <Container>
    <div class="max-w-3xl mx-auto text-center mb-12">
      <span class={`inline-flex items-center px-4 py-2 rounded-full text-sm font-semibold ${colors.badge} shadow-sm`}>
        WHAT THIS SUITE CAN DO
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-neutral-900 dark:text-white mt-4">Focused on your outcomes</h2>
      <p class="text-lg text-neutral-600 dark:text-neutral-300 mt-2">
        Suite-specific capabilities that matter for {suite.targetSector.toLowerCase()}.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8 max-w-6xl mx-auto">
      {suite.featureHighlights.slice(0, 4).map((h) => (
        <article class="group bg-white dark:bg-neutral-800 border border-neutral-200 dark:border-neutral-700 rounded-2xl shadow-sm hover:shadow-lg transition-all duration-200 hover:-translate-y-0.5 overflow-hidden">
          <!-- Colored top accent bar -->
          <div class={`h-1.5 w-full ${colors.accentBg}`} aria-hidden="true"></div>

          <div class="p-6">
            <div class={`${colors.icon} text-3xl mb-4`} aria-hidden="true"><i class={h.icon}></i></div>
            <h3 class="text-xl font-bold text-neutral-900 dark:text-white mb-2">{h.title}</h3>
            <p class="text-neutral-600 dark:text-neutral-300 mb-4">{h.description}</p>

            {h.pills && h.pills.length > 0 && (
              <div class="flex flex-wrap gap-2">
                {h.pills.slice(0, 4).map((p) => (
                  <span class="px-2.5 py-1 rounded-full text-xs font-medium bg-neutral-50 dark:bg-neutral-700/60 text-neutral-700 dark:text-neutral-200 border border-neutral-200 dark:border-neutral-600">{p}</span>
                ))}
              </div>
            )}

            {h.link && (
              <a href={h.link} class={`inline-flex items-center mt-4 font-medium ${colors.link}`}>
                Learn more
                <span class="ml-1 text-xs transition-transform group-hover:translate-x-1 duration-200"><i class="fa-solid fa-arrow-right"></i></span>
              </a>
            )}
          </div>
        </article>
      ))}
    </div>
  </Container>
</section>
