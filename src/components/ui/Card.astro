---
export interface Props {
  title?: string;
  icon?: string;
  class?: string;
  iconClass?: string;
  href?: string;
}

const { 
  title, 
  icon,
  href,
  class: className = "",
  iconClass = "text-green-600 dark:text-green-400",
} = Astro.props;
---

<div class={`bg-white dark:bg-gray-800 rounded-lg border border-gray-200 dark:border-gray-700 p-6 shadow-sm hover:shadow-md transition-shadow ${className}`}>
  {icon && (
    <div class={`text-2xl mb-4 ${iconClass}`}>
      <i class={icon}></i>
    </div>
  )}
  
  {title && (
    <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
      {href ? (
        <a href={href} class="hover:text-green-600 dark:hover:text-green-400 transition-colors">
          {title}
        </a>
      ) : (
        <span>{title}</span>
      )}
    </h3>
  )}
  
  <div class="text-gray-600 dark:text-gray-400">
    <slot />
  </div>
  
  {href && (
    <div class="mt-4">
      <a 
        href={href} 
        class="inline-flex items-center text-green-600 hover:text-green-700 dark:text-green-400 dark:hover:text-green-300 font-medium"
      >
        Learn more
        <span class="ml-1 text-xs"><i class="fa-solid fa-arrow-right"></i></span>
      </a>
    </div>
  )}
</div>