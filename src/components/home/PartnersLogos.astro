---
import Container from '../common/Container.astro';

const partners = [
  { name: 'Microsoft', icon: 'fa-brands fa-microsoft' },
  { name: 'Google', icon: 'fa-brands fa-google' },
  { name: 'Meta', icon: 'fa-brands fa-facebook' },
  { name: 'WordPress', icon: 'fa-brands fa-wordpress' },
  { name: 'Cloudflare', icon: 'fa-brands fa-cloudflare' },
  { name: 'Shopify', icon: 'fa-brands fa-shopify' },
  { name: 'React', icon: 'fa-brands fa-react' },
  { name: 'JavaScript', icon: 'fa-brands fa-js' },
  { name: 'Node.js', icon: 'fa-brands fa-node-js' }
];
---

<section class="py-12 border-t border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/30">
  <Container>
    <p class="text-center text-gray-500 dark:text-gray-400 mb-10 text-sm font-medium tracking-wider uppercase">
      Trusted by leading brands and technologies
    </p>
    <div class="grid grid-cols-3 md:grid-cols-9 gap-8 items-center justify-items-center">
      {partners.map((partner) => (
        <div class="text-center group">
          <div class="flex flex-col items-center">
            <div class="text-3xl mb-2 text-gray-400 dark:text-gray-600 group-hover:text-greenberry-600 dark:group-hover:text-greenberry-400 transition-colors">
              <i class={partner.icon}></i>
            </div>
            <span class="text-xs text-gray-500 dark:text-gray-400 group-hover:text-greenberry-600 dark:group-hover:text-greenberry-400 transition-colors">
              {partner.name}
            </span>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>