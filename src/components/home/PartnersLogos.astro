---
import Container from '../common/Container.astro';
import Badge from '../ui/Badge.astro';

const partners = [
  { name: 'Microsoft', icon: 'fa-brands fa-microsoft', color: 'text-blue-500' },
  { name: 'Google', icon: 'fa-brands fa-google', color: 'text-red-500' },
  { name: 'Meta', icon: 'fa-brands fa-facebook', color: 'text-blue-600' },
  { name: 'WordPress', icon: 'fa-brands fa-wordpress', color: 'text-blue-700' },
  { name: 'Cloudflare', icon: 'fa-brands fa-cloudflare', color: 'text-orange-500' },
  { name: 'Shopify', icon: 'fa-brands fa-shopify', color: 'text-green-500' },
  { name: 'React', icon: 'fa-brands fa-react', color: 'text-blue-400' },
  { name: 'JavaScript', icon: 'fa-brands fa-js', color: 'text-yellow-500' },
  { name: 'Node.js', icon: 'fa-brands fa-node-js', color: 'text-green-600' }
];
---

<section class="py-12 border-t border-b border-gray-200 dark:border-gray-800 bg-gray-50 dark:bg-gray-800/30">
  <Container>
    <div class="text-center mb-8">
      <div class="badge-wrapper">
        <Badge text="PARTNERING WITH LEADING BRANDS" variant="primary" size="sm" />
      </div>
    </div>
    
    <div class="grid grid-cols-3 md:grid-cols-9 gap-8 items-center justify-items-center">
      {partners.map((partner) => (
        <div class="text-center group">
          <div class="flex flex-col items-center">
            <div class={`text-3xl mb-2 text-gray-400 dark:text-gray-600 group-hover:${partner.color} transition-colors duration-300`}>
              <i class={partner.icon}></i>
            </div>
            <span class="text-xs text-gray-500 dark:text-gray-400 group-hover:text-gray-700 dark:group-hover:text-gray-300 transition-colors">
              {partner.name}
            </span>
          </div>
        </div>
      ))}
    </div>
  </Container>
</section>