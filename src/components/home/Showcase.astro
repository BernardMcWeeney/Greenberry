---
import Container from '../common/Container.astro';
import Badge from '../ui/Badge.astro';
import Button from '../common/Button.astro';

const wordpressWebsites = [
  {
    title: "Business Website",
    description: "Professional business website with service pages, about section, and contact form.",
    image: "https://images.unsplash.com/photo-1561070791-2526d30994b5?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1000&q=80",
    features: ["Responsive", "SEO Optimized", "Fast Loading"],
    color: "blue",
    badgeColor: "bg-blue-500"
  },
  {
    title: "E-Commerce Store",
    description: "Complete online store with product catalog, shopping cart, and secure checkout.",
    image: "https://images.unsplash.com/photo-1593642532400-2682810df593?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1000&q=80",
    features: ["WooCommerce", "Payment Gateway", "Inventory Management"],
    color: "green",
    badgeColor: "bg-green-500"
  },
  {
    title: "Blog & Magazine",
    description: "Content-focused website with categories, tags, and subscription options.",
    image: "https://images.unsplash.com/photo-1499750310107-5fef28a66643?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1000&q=80",
    features: ["Content Management", "Newsletter", "Social Sharing"],
    color: "yellow",
    badgeColor: "bg-yellow-500"
  },
  {
    title: "Portfolio Site",
    description: "Showcase your work with this elegant and minimalist portfolio design.",
    image: "https://images.unsplash.com/photo-1467232004584-a241de8bcf5d?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1000&q=80",
    features: ["Gallery", "Project Categories", "Case Studies"],
    color: "red",
    badgeColor: "bg-red-500"
  }
];

// Feature badge colors
const getFeatureBadgeColor = (color) => {
  switch(color) {
    case "blue": return "bg-blue-100 text-blue-800";
    case "green": return "bg-green-100 text-green-800";
    case "yellow": return "bg-yellow-100 text-yellow-800";
    case "red": return "bg-red-100 text-red-800";
    default: return "bg-gray-100 text-gray-800";
  }
};
---

<section class="section-padding bg-gray-50 dark:bg-gray-800/50 relative overflow-hidden">
  <!-- Background elements -->
  <div class="absolute inset-0 overflow-hidden">
    <div class="absolute top-0 right-0 w-96 h-96 bg-greenberry-500/10 rounded-full filter blur-3xl opacity-70 translate-x-1/3 -translate-y-1/3"></div>
    <div class="absolute bottom-0 left-0 w-96 h-96 bg-greenberry-500/10 rounded-full filter blur-3xl opacity-60 -translate-x-1/3 translate-y-1/3"></div>
  </div>

  <Container>
    <div class="max-w-3xl mx-auto text-center mb-16 relative z-10">
      <div class="badge-wrapper">
        <Badge text="WORDPRESS EXPERTISE" variant="primary" size="md" />
      </div>
      <h2 class="heading-primary">
        Beautiful WordPress Websites<br class="hidden md:block"> for Every Need
      </h2>
      <p class="section-description">
        We specialize in creating custom WordPress websites that are fast, secure, and easy to manage.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 gap-6 lg:gap-8">
      {wordpressWebsites.map((website) => (
        <div class="group relative rounded-lg overflow-hidden shadow-md hover:shadow-xl transition-shadow duration-300">
          <div class="w-full aspect-video relative">
            <img 
              src={website.image} 
              alt={website.title}
              class="w-full h-full object-cover rounded-lg group-hover:scale-105 transition-transform duration-700"
            />
            
            {/* Dark gradient overlay */}
            <div class="absolute inset-0 bg-gradient-to-t from-black/80 via-black/50 to-transparent opacity-80 rounded-lg"></div>
            
            {/* Title badge at top - Improved spacing for mobile */}
            <div class="absolute top-3 left-3 sm:top-4 sm:left-4 z-10">
              <span class={`px-2.5 py-1 text-xs sm:px-3 sm:py-1 sm:text-sm font-medium ${website.badgeColor} text-white rounded-full`}>
                {website.title}
              </span>
            </div>
            
            {/* Content overlay at bottom - Improved for mobile */}
            <div class="absolute inset-0 flex flex-col justify-end p-4 sm:p-6">
              <h3 class="text-xl sm:text-2xl font-bold text-white mb-1 sm:mb-2 mt-6 sm:mt-0">
                {website.title}
              </h3>
              <p class="text-white/90 text-sm sm:text-base mb-2 sm:mb-4 line-clamp-2">
                {website.description}
              </p>
              <div class="flex flex-wrap gap-1.5 sm:gap-2">
                {website.features.map(feature => (
                  <span class={`px-2 py-0.5 sm:px-3 sm:py-1 rounded-full text-xs sm:text-sm font-medium inline-block whitespace-nowrap ${getFeatureBadgeColor(website.color)}`}>
                    {feature}
                  </span>
                ))}
              </div>
            </div>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-12">
      <Button href="/services/websites" variant="outline" size="md" class="gap-2 group border-greenberry-600 text-greenberry-600 hover:bg-greenberry-50 dark:border-greenberry-400 dark:text-greenberry-400 dark:hover:bg-gray-800">
        Explore WordPress solutions
        <i class="fa-brands fa-wordpress group-hover:rotate-12 transition-transform duration-300"></i>
      </Button>
    </div>
  </Container>
</section>