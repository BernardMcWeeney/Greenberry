---
import Container from '../common/Container.astro';
import Button from '../common/Button.astro';
import Badge from '../ui/Badge.astro';
---

<section class="py-20 bg-gradient-to-br from-greenberry-600 to-greenberry-700 dark:from-greenberry-700 dark:to-greenberry-800 relative overflow-hidden">
  <!-- Decorative elements -->
  <div class="absolute inset-0">
    <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-white/10 rounded-full -translate-y-1/2 translate-x-1/3"></div>
    <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-white/10 rounded-full translate-y-1/2 -translate-x-1/3"></div>
    
    <!-- Leaf pattern -->
    <div class="absolute inset-0 opacity-5">
      <div class="absolute top-10 left-10 text-6xl">
        <i class="fa-solid fa-leaf"></i>
      </div>
      <div class="absolute top-20 right-20 text-4xl">
        <i class="fa-solid fa-leaf"></i>
      </div>
      <div class="absolute bottom-20 left-1/4 text-5xl">
        <i class="fa-solid fa-leaf"></i>
      </div>
      <div class="absolute bottom-10 right-1/4 text-3xl">
        <i class="fa-solid fa-leaf"></i>
      </div>
    </div>
  </div>
  
  <Container>
    <div class="max-w-4xl mx-auto text-center relative z-10">
      <div class="badge-wrapper">
        <Badge text="GET STARTED TODAY" variant="primary" size="md" class="bg-white/20 text-white" />
      </div>
      
      <h2 class="text-3xl md:text-4xl lg:text-5xl font-bold text-white mb-6">
        Ready to grow your business with a website that works?
      </h2>
      <p class="text-lg md:text-xl text-greenberry-100 mb-10 max-w-3xl mx-auto">
        Get in touch today and let's discuss how Greenberry can help your business thrive online. 
        We'll create a custom solution tailored to your specific needs and goals.
      </p>
      
      <div class="flex flex-col sm:flex-row justify-center gap-6">
        <Button 
          href="/contact" 
          variant="secondary" 
          size="lg"
          class="font-semibold"
        >
          Get Started
          <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
        </Button>
        <Button 
          href="mailto:office@greenberry.ie?subject=Hello%20I%20would%20like%20to%20get%20a%20qoute%20for%20a%20website%20please" 
          variant="outline" 
          size="lg"
          class="border-white text-white hover:bg-white/10 dark:hover:bg-white/10 font-semibold"
        >
          <span class="mr-2"><i class="fa-solid fa-feather"></i></span>
          Get A Quote Now
        </Button>
      </div>
      
      <p class="mt-8 text-white/70 text-sm">
        No commitment required. We'll respond within 24 hours.
      </p>
    </div>
  </Container>
</section>