---
import Container from '../common/Container.astro';
import Button from '../common/Button.astro';

const features = [
  {
    title: "Modern Design",
    description: "Create websites that are both visually appealing and functional, designed to engage your target audience.",
    icon: "fa-solid fa-palette"
  },
  {
    title: "Mobile Responsive",
    description: "All websites are fully responsive, ensuring optimal viewing experience across all devices.",
    icon: "fa-solid fa-mobile-screen"
  },
  {
    title: "Fast Performance",
    description: "Lightning-fast loading speeds to keep your visitors engaged and improve your search rankings.",
    icon: "fa-solid fa-bolt"
  },
  {
    title: "SEO Friendly",
    description: "Built with search engines in mind to help improve your visibility and drive more traffic.",
    icon: "fa-solid fa-magnifying-glass"
  },
  {
    title: "Secure & Reliable",
    description: "Industry-standard security measures to protect your website and your visitors' data.",
    icon: "fa-solid fa-shield-halved"
  },
  {
    title: "Easy Management",
    description: "Simple content management systems that make updating your website a breeze.",
    icon: "fa-solid fa-gear"
  }
];
---

<section class="py-20">
  <Container>
    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
      <div>
        <span class="inline-block py-1 px-3 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300 rounded-full text-sm font-medium mb-4">
          Why Choose Us
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          Scale on a High Speed Web Server!
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 mb-8">
          Sick and tired of slow and unresponsive websites? Yeah, us too! That's why here at Greenberry we specialize in providing simple and high-speed web hosting that actually scales with your business or organization.
        </p>
        <Button href="/contact">
          Learn more about our hosting
          <span class="ml-2"><i class="fa-solid fa-server"></i></span>
        </Button>
      </div>
      
      <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
        {features.map((feature) => (
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm border border-gray-100 dark:border-gray-700">
            <div class="text-green-600 dark:text-green-400 text-2xl mb-4">
              <i class={feature.icon}></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              {feature.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              {feature.description}
            </p>
          </div>
        ))}
      </div>
    </div>
  </Container>
</section>