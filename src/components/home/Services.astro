---
import Container from '../common/Container.astro';
import Card from '../ui/Card.astro';

const services = [
  {
    title: "Website Solutions",
    description: "Modern and cutting-edge websites featuring responsive and lightweight designs, ideal for both mobile and desktop use.",
    icon: "fa-solid fa-globe",
    href: "/services#websites"
  },
  {
    title: "Upgrades & Maintenance",
    description: "Regular updates and maintenance to ensure your website has the latest software and security measures.",
    icon: "fa-solid fa-arrows-rotate",
    href: "/services#maintenance"
  },
  {
    title: "SEO Packages",
    description: "Improve your online visibility and help meet your goals with our comprehensive SEO services.",
    icon: "fa-solid fa-magnifying-glass-chart",
    href: "/services#seo"
  },
  {
    title: "Email Solutions",
    description: "Streamlined and reliable email solutions that prioritize simplicity & security, with custom addresses to reflect your brand.",
    icon: "fa-solid fa-envelope",
    href: "/services#email"
  }
];
---

<section class="py-20 bg-gray-50 dark:bg-gray-800/50">
  <Container>
    <div class="max-w-3xl mx-auto text-center mb-16">
      <span class="inline-block py-1 px-3 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300 rounded-full text-sm font-medium mb-4">
        Our Services
      </span>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
        Powerful Platforms & Beautiful Designs
      </h2>
      <p class="text-xl text-gray-600 dark:text-gray-300">
        Welcome to Greenberry, your go-to web application company in Ireland, where we specialize in making web platforms simple and hassle-free.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
      {services.map((service) => (
        <Card 
          title={service.title}
          icon={service.icon}
          href={service.href}
        >
          <p>{service.description}</p>
        </Card>
      ))}
    </div>
  </Container>
</section>