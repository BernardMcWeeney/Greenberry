---
import Container from '../common/Container.astro';
import Badge from '../ui/Badge.astro';
import Button from '../common/Button.astro';

const services = [
  {
    title: "Website Solutions",
    description: "Modern and cutting-edge websites featuring responsive and lightweight designs.",
    icon: "fa-solid fa-globe",
    color: "blue",
    borderColor: "border-t-accent-blue-500",
    textColor: "text-accent-blue-500",
    link: "/services#websites"
  },
  {
    title: "Upgrade Solutions",
    description: "Regular updates and maintenance to ensure your website has the latest software and security.",
    icon: "fa-solid fa-arrows-rotate",
    color: "green",
    borderColor: "border-t-greenberry-500",
    textColor: "text-greenberry-500",
    link: "/services#maintenance"
  },
  {
    title: "SEO Packages",
    description: "Improve your online visibility and help meet your goals with our comprehensive SEO services.",
    icon: "fa-solid fa-magnifying-glass-chart",
    color: "orange",
    borderColor: "border-t-accent-orange-500",
    textColor: "text-accent-orange-500",
    link: "/services#seo"
  },
  {
    title: "Email Solutions",
    description: "Streamlined and reliable email solutions that prioritize simplicity & security for your business.",
    icon: "fa-solid fa-envelope",
    color: "red",
    borderColor: "border-t-accent-red-500",
    textColor: "text-accent-red-500",
    link: "/services#email"
  }
];
---

<section class="section-padding bg-neutral-50 dark:bg-gray-800/50 section-bg-decoration">
  <Container>
    <div class="max-w-3xl mx-auto text-center mb-16 relative z-10">
      <div class="badge-wrapper">
        <Badge text="OUR SERVICES" variant="primary" size="md" />
      </div>
      <h2 class="heading-primary">
        Complete Digital Solutions
      </h2>
      <p class="section-description">
        Everything you need to establish and grow your online presence.
      </p>
    </div>

    <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-6 relative z-10">
      {services.map((service) => (
        <div class={`group bg-white dark:bg-gray-800 rounded-lg shadow-xs hover:shadow-md transition-all duration-300 overflow-hidden border-t-4 ${service.borderColor}`}>
          <div class="p-6">
            <div class={`${service.textColor} text-4xl mb-4`}>
              <i class={service.icon}></i>
            </div>
            <h3 class="text-xl font-bold text-neutral-900 dark:text-white mb-3">
              {service.title}
            </h3>
            <p class="text-neutral-600 dark:text-gray-300 mb-4">
              {service.description}
            </p>
            <a 
              href={service.link} 
              class="inline-flex items-center text-greenberry-600 hover:text-greenberry-700 dark:text-greenberry-400 dark:hover:text-greenberry-300 font-medium group"
              aria-label={`Explore ${service.title}`}
            >
              Explore {service.title}
              <span class="ml-1 text-xs transition-transform group-hover:translate-x-1 duration-300">
                <i class="fa-solid fa-arrow-right"></i>
              </span>
            </a>
          </div>
        </div>
      ))}
    </div>
    
    <div class="text-center mt-16 relative z-10">
      <Button href="/services" variant="primary" size="lg" class="font-medium shadow-md hover:shadow-lg hover:shadow-greenberry-500/20">
        Explore All Services
        <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
      </Button>
    </div>
  </Container>
</section>