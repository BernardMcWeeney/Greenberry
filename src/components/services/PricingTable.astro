---

<div class="grid grid-cols-1 md:grid-cols-3 gap-8">
  {plans.map((plan) => (
    <div class={`relative bg-white dark:bg-gray-800 rounded-lg shadow-sm border ${plan.popular ? 'border-greenberry-500' : 'border-gray-200 dark:border-gray-700'} overflow-hidden transition-all duration-300 hover:shadow-md`}>
      {plan.popular && (
        <div class="absolute top-0 left-0 right-0 bg-greenberry-500 text-white text-center text-sm font-medium py-1">
          Most Popular
        </div>
      )}
      
      <div class={`p-6 ${plan.popular ? 'pt-10' : ''}`}>
        <h3 class="text-2xl font-bold text-gray-900 dark:text-white mb-2">
          {plan.name}
        </h3>
        
        <div class="flex items-baseline mb-4">
          <span class="text-3xl font-extrabold text-gray-900 dark:text-white">
            {plan.price}
          </span>
          {plan.period && (
            <span class="ml-1 text-gray-500 dark:text-gray-400">
              {plan.period}
            </span>
          )}
        </div>
        
        <p class="text-gray-600 dark:text-gray-300 mb-6 h-12">
          {plan.description}
        </p>
        
        <ul class="space-y-2 mb-8">
          {plan.features.map((feature) => (
            <li class="flex items-start">
              <span class="text-greenberry-500 mr-2 mt-1"><i class="fa-solid fa-check"></i></span>
              <span class="text-gray-700 dark:text-gray-300">{feature}</span>
            </li>
          ))}
        </ul>
        
        <Button
          href="/contact"
          variant={plan.popular ? 'primary' : 'outline'}
          size="lg"
          class="w-full justify-center font-medium"
        >
          {plan.buttonText}
        </Button>
      </div>
    </div>
  ))}
</div>

<div class="mt-10 text-center max-w-2xl mx-auto">
  <p class="text-gray-600 dark:text-gray-300">
    Need a custom solution? <a href="/contact" class="text-greenberry-600 dark:text-greenberry-400 font-medium hover:underline">Contact us</a> for a personalized quote tailored to your specific requirements.
  </p>
</div>