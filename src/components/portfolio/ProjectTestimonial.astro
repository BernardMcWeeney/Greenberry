---
import Container from '../common/Container.astro';

export interface Props {
  quote: string;
  author: string;
  position?: string;
  company?: string;
  avatar?: string;
}

const { 
  quote, 
  author, 
  position = "",
  company = "",
  avatar = "" 
} = Astro.props;
---

<section class="py-16 bg-cool-gray-50 dark:bg-gray-800/50 overflow-hidden relative">
  <!-- Decorative elements -->
  <div class="absolute inset-0">
    <div class="absolute top-1/3 right-1/4 w-64 h-64 bg-greenberry-500/10 rounded-full filter blur-3xl opacity-70"></div>
    <div class="absolute bottom-1/3 left-1/4 w-64 h-64 bg-greenberry-600/10 rounded-full filter blur-3xl opacity-60"></div>
  </div>
  
  <Container>
    <div class="max-w-4xl mx-auto relative">
      <!-- Large quote marks as background -->
      <div class="absolute top-0 left-0 text-9xl text-greenberry-500/10 dark:text-greenberry-500/5 transform -translate-x-8 -translate-y-16 pointer-events-none">
        <i class="fa-solid fa-quote-left"></i>
      </div>
      <div class="absolute bottom-0 right-0 text-9xl text-greenberry-500/10 dark:text-greenberry-500/5 transform translate-x-8 translate-y-16 pointer-events-none">
        <i class="fa-solid fa-quote-right"></i>
      </div>
      
      <!-- Testimonial card -->
      <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-md rounded-2xl shadow-lg p-10 border border-white/40 dark:border-gray-700/40 relative z-10">
        <div class="flex flex-col items-center">
          <!-- Testimonial text -->
          <blockquote class="text-xl md:text-2xl italic text-gray-700 dark:text-gray-300 mb-8 text-center leading-relaxed">
            "{quote}"
          </blockquote>
          
          <!-- Author info -->
          <div class="flex items-center">
            {avatar ? (
              <img 
                src={avatar} 
                alt={author} 
                class="w-16 h-16 rounded-full object-cover mr-4 border-2 border-greenberry-500"
              />
            ) : (
              <div class="w-16 h-16 rounded-full bg-greenberry-100 dark:bg-greenberry-900 flex items-center justify-center text-greenberry-600 dark:text-greenberry-400 text-2xl mr-4 border-2 border-greenberry-500/20">
                <i class="fa-solid fa-user"></i>
              </div>
            )}
            <div class="text-center md:text-left">
              <p class="text-xl font-bold text-gray-900 dark:text-white">{author}</p>
              <p class="text-gray-600 dark:text-gray-400">
                {position}{position && company ? ", " : ""}{company}
              </p>
            </div>
          </div>
          
          <!-- Decorative stars -->
          <div class="mt-6 flex justify-center">
            {[...Array(5)].map(() => (
              <span class="text-yellow-400 mx-0.5">
                <i class="fa-solid fa-star"></i>
              </span>
            ))}
          </div>
        </div>
      </div>
    </div>
  </Container>
</section>