---
import Container from '../common/Container.astro';
import Badge from '../ui/Badge.astro';

export interface Props {
  title: string;
  description?: string;
  images: string[];
  projectTitle: string;
  badgeText?: string;
}

const { 
  title, 
  description, 
  images, 
  projectTitle,
  badgeText = "PROJECT SHOWCASE" 
} = Astro.props;
---

<section class="py-16 bg-white dark:bg-gray-900">
  <Container>
    <div class="max-w-3xl mx-auto text-center mb-10">
      <div class="badge-wrapper">
        <Badge text={badgeText} variant="primary" size="md" />
      </div>
      <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
        {title}
      </h2>
      {description && (
        <p class="text-lg text-gray-600 dark:text-gray-300">
          {description}
        </p>
      )}
    </div>
    
    <!-- Static Bento Gallery Grid -->
    <div class="bento-gallery">
      {images.map((image, index) => (
        <div class={`bento-item ${
          index === 0 ? "bento-large" : 
          index === 1 ? "bento-wide" :
          index % 5 === 4 ? "bento-wide" :
          "bento-regular"
        }`}>
          <div class="bento-container">
            <img 
              src={image} 
              alt={`${projectTitle} - Gallery image ${index + 1}`} 
              class="bento-image"
              width="800"
              height="600"
              loading={index < 2 ? "eager" : "lazy"}
            />
            <div class="bento-overlay"></div>
          </div>
        </div>
      ))}
    </div>
    
    <!-- Static Scroll Indicator for Mobile -->
    <div class="scroll-indicator">
      {[...Array(Math.min(5, images.length))].map((_, i) => (
        <div class={`indicator-dot ${i === 0 ? "indicator-active" : ""}`}></div>
      ))}
    </div>
  </Container>
</section>

<style>
  /* Bento Gallery Grid */
  .bento-gallery {
    display: grid;
    grid-template-columns: repeat(4, 1fr);
    grid-auto-rows: 250px;
    gap: 1rem;
  }
  
  /* Bento Item Styles */
  .bento-item {
    position: relative;
    border-radius: 0.75rem;
    overflow: hidden;
    box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
    transition: box-shadow-sm 0.3s ease;
  }
  
  .bento-item:hover {
    box-shadow: 0 10px 15px -3px rgba(0, 0, 0, 0.1);
  }
  
  /* Bento Container */
  .bento-container {
    position: relative;
    width: 100%;
    height: 100%;
    overflow: hidden;
  }
  
  /* Item Size Variants */
  .bento-large {
    grid-column: span 2;
    grid-row: span 2;
  }
  
  .bento-wide {
    grid-column: span 2;
  }
  
  .bento-regular {
    grid-column: span 1;
  }
  
  /* Image Styling */
  .bento-image {
    width: 100%;
    height: 100%;
    object-fit: cover;
    transition: transform 0.5s ease;
  }
  
  .bento-container:hover .bento-image {
    transform: scale(1.05);
  }
  
  /* Overlay Styling */
  .bento-overlay {
    position: absolute;
    inset: 0;
    background: linear-gradient(to top, rgba(17, 24, 39, 0.6), transparent);
    opacity: 0;
    transition: opacity 0.3s ease;
  }
  
  .bento-container:hover .bento-overlay {
    opacity: 1;
  }
  
  /* Mobile Scroll Indicator */
  .scroll-indicator {
    display: none;
    justify-content: center;
    margin-top: 1.5rem;
    gap: 0.25rem;
  }
  
  .indicator-dot {
    width: 0.5rem;
    height: 0.5rem;
    border-radius: 9999px;
    background-color: #D1D5DB;
  }
  
  .indicator-dot.indicator-active {
    background-color: var(--greenberry-500, #22c55e);
  }
  
  /* Mobile Responsive Styles */
  @media (max-width: 768px) {
    .bento-gallery {
      display: flex;
      overflow-x: auto;
      scroll-snap-type: x mandatory;
      padding-bottom: 1rem;
      gap: 0.75rem;
      grid-template-columns: unset;
      grid-auto-rows: unset;
    }
    
    .bento-item {
      flex: 0 0 90%;
      width: 90%;
      height: 200px;
      scroll-snap-align: start;
      grid-column: unset;
      grid-row: unset;
    }
    
    .scroll-indicator {
      display: flex;
    }
    
    /* For better scrolling behavior */
    .bento-gallery::-webkit-scrollbar {
      display: none;
    }
    
    .bento-gallery {
      -ms-overflow-style: none;
      scrollbar-width: none;
    }
  }
</style>