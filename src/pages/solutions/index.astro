---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';
import Button from '../../components/common/Button.astro';
import Badge from '../../components/ui/Badge.astro';
import PageHeader from '../../components/common/PageHeader.astro';
import BannerCta from '../../components/common/BannerCta.astro';
import ServiceCard from '../../components/services/ServiceCard.astro';
import FeatureHighlight from '../../components/services/FeatureHighlight.astro';
import Testimonials from '../../components/home/Testimonials.astro';
import PartnersLogos from '../../components/home/PartnersLogos.astro';
import { SEO } from "astro-seo";
import { solutions } from '../../data/solutions';
import { services } from '../../data/services';

// Key features that make Greenberry different
const keyFeatures = [
  {
    title: "All-In-One Solutions",
    description: "Comprehensive packages that combine multiple services for maximum value and convenience.",
    icon: "fa-solid fa-layer-group",
    color: "indigo",
    textColor: "text-indigo-500"
  },
  {
    title: "Tailored For Irish Businesses",
    description: "Solutions designed specifically for the needs and challenges of Irish organizations.",
    icon: "fa-solid fa-map-location-dot",
    color: "green",
    textColor: "text-green-500"
  },
  {
    title: "Simplified Management",
    description: "One point of contact for all your digital needs, reducing complexity and saving time.",
    icon: "fa-solid fa-sliders",
    color: "blue",
    textColor: "text-blue-500"
  },
  {
    title: "Predictable Pricing",
    description: "Clear, subscription-based pricing with no hidden fees or unexpected costs.",
    icon: "fa-solid fa-wallet",
    color: "purple",
    textColor: "text-purple-500"
  }
];
---

<Layout title="Digital Solutions | Greenberry - Web Design for Irish Businesses">
  <!-- Hero Section using PageHeader component -->
  <PageHeader
    title="Digital Solutions"
    description="Comprehensive digital packages to help your Irish business thrive online."
    backgroundVariant="decorated"
    badgeText="WHAT WE OFFER"
    highlightedText="Solutions"
    paddingY="lg"
  />

  <!-- Track Record Section to break up the flow -->
  <PartnersLogos />
  
  <!-- Solutions Overview Section -->
  <section class="py-16 bg-cool-gray-50 dark:bg-gray-800/50 section-bg-decoration relative overflow-hidden">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-16 relative z-10">
        <div class="badge-wrapper">
          <Badge text="OUR SOLUTIONS" variant="primary" size="md" />
        </div>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-4 leading-tight">
          Complete Digital Packages for Your Business
        </h2>
        <p class="text-lg text-gray-600 dark:text-gray-300 max-w-3xl mx-auto">
          From comprehensive digital care to specialized packages, we provide everything you need in one convenient solution.
        </p>
      </div>
      
      <!-- Solutions Cards Grid - Using the solutions data -->
      <div class="grid grid-cols-1 md:grid-cols-2 gap-8 mt-12 relative z-10">
        {solutions.map((solution) => (
          <ServiceCard 
            id={solution.id}
            title={solution.title}
            description={solution.description}
            icon={solution.icon}
            color={solution.color}
            textColor={solution.textColor}
            borderColor={solution.borderColor}
            buttonTextColor="text-green-500" 
            features={solution.features}
            link={solution.link}
            ctaText={solution.ctaText}
          />
        ))}
      </div>
    </Container>
  </section>
  
  <!-- Key Features Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-16">
        <div class="badge-wrapper">
          <Badge text="WHY CHOOSE OUR SOLUTIONS" variant="primary" size="md" />
        </div>
        <h2 class="heading-primary">
          Benefits of Our Digital Solutions
        </h2>
        <p class="section-description">
          Streamlined packages that combine multiple services for better results and simpler management.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 gap-10">
        {keyFeatures.map((feature) => (
          <div class="group card p-8 border-2 border-gray-100 dark:border-gray-700 hover:border-greenberry-600 dark:hover:border-greenberry-600 transition-all duration-300 card-hover rounded-lg shadow-xs hover:shadow-md">
            <div class="flex gap-6">
              <div class={`${feature.textColor} text-4xl shrink-0 mt-1`}>
                <div class="w-14 h-14 rounded-2xl bg-white dark:bg-gray-700 flex items-center justify-center shadow-xs group-hover:shadow-md group-hover:scale-110 transition-all duration-300">
                  <i class={feature.icon}></i>
                </div>
              </div>
              <div>
                <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3 group-hover:text-greenberry-600 dark:group-hover:text-greenberry-400 transition-colors">
                  {feature.title}
                </h3>
                <p class="text-gray-600 dark:text-gray-300">
                  {feature.description}
                </p>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </section>
  
  <!-- Feature Highlight - Most Popular Solution -->
  <FeatureHighlight 
    title="Website-as-a-Service (WaaS): Our Most Popular Solution"
    description="Get everything you need for a successful online presence in one comprehensive monthly subscription: website, domain, email, maintenance, SEO, and support."
    badgeText="FEATURED SOLUTION"
    imageSrc="https://images.unsplash.com/photo-1529333166437-7750a6dd5a70?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=500&q=80"
    imageAlt="Website as a Service illustration"
    features={[
      "Complete website design & build",
      "Domain & DNS management",
      "Professional email setup",
      "Monthly maintenance & backups",
      "Local SEO optimization",
      "Security monitoring",
      "Technical support"
    ]}
  />
  
  <!-- Testimonials Section -->
  <Testimonials />
  
  <!-- CTA Section -->
  <BannerCta
    title="Ready to simplify your digital presence?"
    description="Get in touch today and let's discuss how Greenberry's digital solutions can streamline your online operations. We'll create a custom solution tailored to your specific needs and goals."
    badgeText="GET STARTED TODAY"
    primaryButtonText="Get Started"
    primaryButtonHref="/contact"
    secondaryButtonText="Get A Quote Now"
    secondaryButtonHref="tel:+353123456789"
    footnote="No commitment required. We'll respond within 24 hours."
  />
</Layout>

<style>
  /* Custom section background decoration */
  .section-bg-decoration {
    position: relative;
    overflow: hidden;
  }
  
  .section-bg-decoration::before {
    content: "";
    position: absolute;
    right: -5%;
    top: -5%;
    width: 20%;
    height: 20%;
    background-color: rgba(72, 187, 120, 0.1);
    border-radius: 50%;
    filter: blur(60px);
    z-index: 0;
  }
  
  .section-bg-decoration::after {
    content: "";
    position: absolute;
    left: -5%;
    bottom: -5%;
    width: 20%;
    height: 20%;
    background-color: rgba(72, 187, 120, 0.1);
    border-radius: 50%;
    filter: blur(60px);
    z-index: 0;
  }

  /* Animation delays */
  .animation-delay-700 {
    animation-delay: 700ms;
  }
  
  .animation-delay-1500 {
    animation-delay: 1500ms;
  }
</style>