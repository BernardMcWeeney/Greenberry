---
// src/pages/suites/index.astro
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';
import PageHeader from '../../components/common/PageHeader.astro';
import SuiteCard from '../../components/suites/SuiteCard.astro';
import PageCta from '../../components/common/PageCta.astro';
import { SEO } from 'astro-seo';

import { suites, type Suite } from '../../data/suites';
---

<Layout title="Tailored Digital Suites | Greenberry">
  <SEO
    title="Tailored Digital Suites for Your Sector | Greenberry"
    description="Discover our specialized digital suites designed for schools, parishes, clubs, SMEs, and more. Complete solutions for your unique needs."
    openGraph={{
      basic: {
        title: "Tailored Digital Suites | Greenberry",
        type: 'website',
        image: '/images/og/suites-overview.png', // Replace with a relevant OG image
      },
    }}
  />

  <PageHeader
    title="Tailored Digital Suites"
    description="We understand that different sectors have unique digital needs. Our Suites are comprehensive packages of solutions and services, specifically designed to help organizations like yours thrive online."
    badgeText="INDUSTRY PACKAGES"
    highlightedText="Suites"
    backgroundVariant="decorated"
    paddingY="lg"
  />

  <section class="py-16 lg:py-24 bg-gray-50 dark:bg-gray-800/30">
    <Container>
      {suites.length > 0 ? (
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
          {suites.map((suite) => (
            <SuiteCard {...suite} />
          ))}
        </div>
      ) : (
        <p class="text-center text-lg text-gray-600 dark:text-gray-300">
          No suites are currently available. Please check back soon!
        </p>
      )}
    </Container>
  </section>

  <PageCta
    title="Don't See a Suite for Your Sector?"
    description="We're always developing new packages. If you have specific needs or represent a sector not listed, contact us! We can create a custom suite just for you."
    badgeText="CUSTOM SOLUTIONS"
    primaryButtonText="Discuss Your Needs"
    primaryButtonHref="/contact"
    secondaryButtonText="View All Services"
    secondaryButtonHref="/services"
  />
</Layout>