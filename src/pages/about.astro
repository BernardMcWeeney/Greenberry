---
import Layout from '../layouts/Layout.astro';
import Container from '../components/common/Container.astro';
import Button from '../components/common/Button.astro';

const teamMembers = [
  {
    name: "John Smith",
    position: "Founder & Lead Developer",
    bio: "With over 10 years of experience in web development, John founded Greenberry to help Irish businesses establish effective online presences.",
    image: "https://randomuser.me/api/portraits/men/32.jpg"
  },
  {
    name: "Sarah O'Connor",
    position: "Design Lead",
    bio: "Sarah brings creative vision and user experience expertise to every project, ensuring websites are both beautiful and functional.",
    image: "https://randomuser.me/api/portraits/women/44.jpg"
  },
  {
    name: "Michael Murphy",
    position: "SEO Specialist",
    bio: "Michael helps clients improve their search visibility and drive organic traffic with data-driven SEO strategies.",
    image: "https://randomuser.me/api/portraits/men/67.jpg"
  }
];

const values = [
  {
    title: "Customer-First Approach",
    description: "We believe in putting our clients' needs first, listening carefully to understand their goals and challenges.",
    icon: "fa-solid fa-users"
  },
  {
    title: "Quality & Excellence",
    description: "We're committed to delivering high-quality work that exceeds expectations and stands the test of time.",
    icon: "fa-solid fa-medal"
  },
  {
    title: "Transparency",
    description: "We maintain open communication throughout every project, with clear pricing and no hidden fees.",
    icon: "fa-solid fa-clipboard-check"
  },
  {
    title: "Long-term Relationships",
    description: "We focus on building lasting partnerships with our clients, providing ongoing support and expertise.",
    icon: "fa-solid fa-handshake"
  }
];
---

<Layout title="About Us | Greenberry">
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-green-50 dark:bg-gray-800">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white mb-6">
          About Greenberry
        </h1>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          We're an Irish web development agency specializing in creating beautiful, functional websites that help businesses grow.
        </p>
      </div>
    </Container>
  </section>
  
  <!-- Our Story -->
  <section class="py-16">
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center">
        <div>
          <span class="inline-block py-1 px-3 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300 rounded-full text-sm font-medium mb-4">
            Our Story
          </span>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
            From a small idea to helping businesses across Ireland
          </h2>
          <div class="space-y-4 text-gray-600 dark:text-gray-300">
            <p>
              Founded in 2018, Greenberry began with a simple mission: to make high-quality web development accessible to Irish businesses of all sizes.
            </p>
            <p>
              We noticed that many small businesses were struggling with outdated websites or overpaying for basic services. We set out to change that by offering affordable, fully-managed website solutions that prioritize performance, design, and results.
            </p>
            <p>
              Today, we're proud to have helped over 100 businesses across Ireland establish and grow their online presence. Our small but dedicated team brings expertise in web development, design, SEO, and digital strategy to every project.
            </p>
          </div>
        </div>
        <div class="relative">
          <img 
            src="https://images.unsplash.com/photo-1522071820081-009f0129c71c?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80" 
            alt="Greenberry team" 
            class="rounded-lg shadow-lg"
          />
          <div class="absolute -bottom-6 -right-6 w-40 h-40 bg-green-600/20 rounded-full blur-2xl -z-10"></div>
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Our Values -->
  <section class="py-16 bg-gray-50 dark:bg-gray-800/50">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="inline-block py-1 px-3 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300 rounded-full text-sm font-medium mb-4">
          Our Values
        </span>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
          What drives us every day
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          These core principles guide everything we do at Greenberry.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-4 gap-8">
        {values.map((value) => (
          <div class="bg-white dark:bg-gray-800 p-6 rounded-lg shadow-sm">
            <div class="text-green-600 dark:text-green-400 text-2xl mb-4">
              <i class={value.icon}></i>
            </div>
            <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-2">
              {value.title}
            </h3>
            <p class="text-gray-600 dark:text-gray-400">
              {value.description}
            </p>
          </div>
        ))}
      </div>
    </Container>
  </section>
  
  <!-- Team Section -->
  <section class="py-16">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="inline-block py-1 px-3 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300 rounded-full text-sm font-medium mb-4">
          Our Team
        </span>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
          Meet the people behind Greenberry
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300">
          A small but dedicated team of web experts passionate about helping Irish businesses succeed online.
        </p>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-3 gap-8">
        {teamMembers.map((member) => (
          <div class="bg-white dark:bg-gray-800 rounded-lg overflow-hidden shadow-sm border border-gray-200 dark:border-gray-700">
            <img 
              src={member.image} 
              alt={member.name} 
              class="w-full h-64 object-cover object-center"
            />
            <div class="p-6">
              <h3 class="text-xl font-semibold text-gray-900 dark:text-white mb-1">
                {member.name}
              </h3>
              <p class="text-green-600 dark:text-green-400 font-medium mb-4">
                {member.position}
              </p>
              <p class="text-gray-600 dark:text-gray-400">
                {member.bio}
              </p>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </section>
  
  <!-- CTA Section -->
  <section class="py-16 bg-green-50 dark:bg-gray-800/50">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">
          Ready to work with us?
        </h2>
        <p class="text-xl text-gray-600 dark:text-gray-300 mb-8">
          Let's discuss how Greenberry can help your business thrive online.
        </p>
        <Button href="/contact" size="lg">
          Get in Touch
          <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
        </Button>
      </div>
    </Container>
  </section>
</Layout>