---
import Layout from '../layouts/Layout.astro';
import Hero from '../components/home/Hero.astro';
import Services from '../components/home/Services.astro';
import Features from '../components/home/Features.astro';
import Testimonials from '../components/home/Testimonials.astro';
import Cta from '../components/home/Cta.astro';
import Container from '../components/common/Container.astro';

// Logos of companies/tech that Greenberry works with
const partners = [
  { name: "WordPress", icon: "fa-brands fa-wordpress" },
  { name: "Shopify", icon: "fa-brands fa-shopify" },
  { name: "React", icon: "fa-brands fa-react" },
  { name: "Node.js", icon: "fa-brands fa-node-js" },
  { name: "Cloudflare", icon: "fa-brands fa-cloudflare" }
];
---

<Layout>
  <Hero />
  
  <!-- Logo Cloud -->
  <Container>
    <div class="py-12 border-t border-b border-gray-200 dark:border-gray-800">
      <p class="text-center text-gray-500 dark:text-gray-400 mb-8 text-sm font-medium">
        TRUSTED TECHNOLOGIES WE WORK WITH
      </p>
      <div class="flex flex-wrap justify-center items-center gap-x-12 gap-y-6">
        {partners.map((partner) => (
          <div class="text-gray-400 dark:text-gray-500 text-3xl">
            <i class={partner.icon} title={partner.name}></i>
          </div>
        ))}
      </div>
    </div>
  </Container>
  
  <Services />
  <Features />
  
  <!-- Stats Section -->
  <section class="py-20 bg-gray-50 dark:bg-gray-800/50">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-16">
        <span class="inline-block py-1 px-3 bg-green-100 dark:bg-green-900 text-green-800 dark:text-green-300 rounded-full text-sm font-medium mb-4">
          Our Track Record
        </span>
        <h2 class="text-3xl md:text-4xl font-bold text-gray-900 dark:text-white mb-6">
          Delivering Results for Irish Businesses
        </h2>
      </div>
      
      <div class="grid grid-cols-1 md:grid-cols-4 gap-8 text-center">
        <div>
          <p class="text-4xl md:text-5xl font-bold text-green-600 dark:text-green-400 mb-2">5+</p>
          <p class="text-gray-600 dark:text-gray-300">Years in Business</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-bold text-green-600 dark:text-green-400 mb-2">100+</p>
          <p class="text-gray-600 dark:text-gray-300">Happy Clients</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-bold text-green-600 dark:text-green-400 mb-2">150+</p>
          <p class="text-gray-600 dark:text-gray-300">Projects Completed</p>
        </div>
        <div>
          <p class="text-4xl md:text-5xl font-bold text-green-600 dark:text-green-400 mb-2">99%</p>
          <p class="text-gray-600 dark:text-gray-300">Client Satisfaction</p>
        </div>
      </div>
    </Container>
  </section>
  
  <Testimonials />
  <Cta />
</Layout>