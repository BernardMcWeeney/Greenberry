---
import Layout from '../layouts/Layout.astro';
import Container from '../components/common/Container.astro';
import Button from '../components/common/Button.astro';
import { COMPANY } from '../config';
---

<Layout title="Contact Us | Greenberry">
  <section class="py-16 lg:py-24 bg-white dark:bg-gray-900">
    <Container>
      <div class="max-w-3xl mx-auto text-center mb-16">
        <h1 class="heading-primary">
          Let's Start a Conversation
        </h1>
        <p class="section-description">
          Ready to discuss your project? We're here to help you create a website that works for your business.
        </p>
      </div>

      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
        <!-- Contact Form -->
        <div class="card p-8">
          <h2 class="heading-secondary">Send us a message</h2>
          
          <form class="space-y-6">
            <div class="grid grid-cols-1 sm:grid-cols-2 gap-6">
              <div>
                <label for="first-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                  First Name
                </label>
                <input
                  type="text"
                  id="first-name"
                  name="first-name"
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-greenberry-500 focus:border-greenberry-500"
                  required
                />
              </div>
              <div>
                <label for="last-name" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                  Last Name
                </label>
                <input
                  type="text"
                  id="last-name"
                  name="last-name"
                  class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-greenberry-500 focus:border-greenberry-500"
                  required
                />
              </div>
            </div>
            
            <div>
              <label for="email" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                Email
              </label>
              <input
                type="email"
                id="email"
                name="email"
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-greenberry-500 focus:border-greenberry-500"
                required
              />
            </div>
            
            <div>
              <label for="phone" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                Phone Number
              </label>
              <input
                type="tel"
                id="phone"
                name="phone"
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-greenberry-500 focus:border-greenberry-500"
              />
            </div>
            
            <div>
              <label for="message" class="block text-sm font-medium text-gray-700 dark:text-gray-300 mb-1">
                Message
              </label>
              <textarea
                id="message"
                name="message"
                rows="4"
                class="w-full px-4 py-2 border border-gray-300 dark:border-gray-600 rounded-md bg-white dark:bg-gray-700 text-gray-900 dark:text-white focus:ring-2 focus:ring-greenberry-500 focus:border-greenberry-500"
                required
              ></textarea>
            </div>
            
            <Button type="submit" block={true}>
              Send Message
              <i class="fa-solid fa-paper-plane ml-2"></i>
            </Button>
          </form>
        </div>
        
        <!-- Contact Info -->
        <div>
          <h2 class="heading-secondary mb-6">Get in touch</h2>
          
          <div class="space-y-8">
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fa-solid fa-envelope"></i>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Email Us</h3>
                <p class="mt-1 text-gray-600 dark:text-gray-300">
                  <a href={`mailto:${COMPANY.email}`} class="hover:text-greenberry-600 dark:hover:text-greenberry-400">
                    {COMPANY.email}
                  </a>
                </p>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                  We'll respond within 24 hours
                </p>
              </div>
            </div>
            
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fa-solid fa-phone"></i>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Call Us</h3>
                <p class="mt-1 text-gray-600 dark:text-gray-300">
                  <a href={`tel:${COMPANY.phone}`} class="hover:text-greenberry-600 dark:hover:text-greenberry-400">
                    {COMPANY.phone}
                  </a>
                </p>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                  Monday-Friday, 9am-5pm IST
                </p>
              </div>
            </div>
            
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fa-solid fa-location-dot"></i>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Office</h3>
                <p class="mt-1 text-gray-600 dark:text-gray-300">
                  {COMPANY.address}
                </p>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                  We primarily work remotely, but are available for in-person meetings across Ireland
                </p>
              </div>
            </div>
            
            <div class="feature-item">
              <div class="feature-icon">
                <i class="fa-solid fa-clock"></i>
              </div>
              <div>
                <h3 class="text-lg font-medium text-gray-900 dark:text-white">Working Hours</h3>
                <p class="mt-1 text-gray-600 dark:text-gray-300">
                  Monday-Friday: 9am-5pm
                </p>
                <p class="mt-1 text-sm text-gray-500 dark:text-gray-400">
                  Weekend: Closed
                </p>
              </div>
            </div>
          </div>
          
          <!-- Map or additional contact info can go here -->
          <div class="mt-10 p-6 bg-gray-50 dark:bg-gray-800 rounded-lg">
            <h3 class="text-lg font-medium text-gray-900 dark:text-white mb-3">Find us online</h3>
            <div class="flex gap-4 mt-4">
              <a href="#" class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center text-gray-600 hover:bg-greenberry-500 hover:text-white dark:text-gray-400 dark:hover:bg-greenberry-600 dark:hover:text-white transition-colors">
                <i class="fa-brands fa-facebook-f"></i>
              </a>
              <a href="#" class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center text-gray-600 hover:bg-greenberry-500 hover:text-white dark:text-gray-400 dark:hover:bg-greenberry-600 dark:hover:text-white transition-colors">
                <i class="fa-brands fa-twitter"></i>
              </a>
              <a href="#" class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center text-gray-600 hover:bg-greenberry-500 hover:text-white dark:text-gray-400 dark:hover:bg-greenberry-600 dark:hover:text-white transition-colors">
                <i class="fa-brands fa-linkedin-in"></i>
              </a>
              <a href="#" class="w-10 h-10 rounded-full bg-gray-100 dark:bg-gray-700 flex items-center justify-center text-gray-600 hover:bg-greenberry-500 hover:text-white dark:text-gray-400 dark:hover:bg-greenberry-600 dark:hover:text-white transition-colors">
                <i class="fa-brands fa-instagram"></i>
              </a>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>
</Layout>