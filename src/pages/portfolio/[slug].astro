---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';
import Button from '../../components/common/Button.astro';
import Badge from '../../components/ui/Badge.astro';
import { portfolioProjects, type PortfolioProject } from '../../data/portfolioProjects';

// Get current project from URL parameter
export async function getStaticPaths() {
  return portfolioProjects.map(project => ({
    params: { slug: project.id },
    props: { project },
  }));
}

interface Props {
  project: PortfolioProject;
}

const { project } = Astro.props;

const projectSteps = [
  {
    title: "The Challenge",
    description: project.challenge,
    icon: "fa-solid fa-triangle-exclamation",
    color: "red",
    borderColor: "border-t-red-500",
    textColor: "text-red-500"
  },
  {
    title: "Our Solution",
    description: project.solution,
    icon: "fa-solid fa-lightbulb",
    color: "blue",
    borderColor: "border-t-blue-500",
    textColor: "text-blue-500"
  },
  {
    title: "The Results",
    description: project.results,
    icon: "fa-solid fa-chart-line",
    color: "green",
    borderColor: "border-t-green-500",
    textColor: "text-green-500"
  }
];
---

<Layout title={`${project.title} | Portfolio | Greenberry`}>
  <!-- Hero Section with project showcase -->
  <section class="py-20 bg-cool-gray-50 dark:bg-gray-800/50 relative overflow-hidden">
    <!-- Decorative elements -->
    <div class="absolute inset-0">
      <div class="absolute top-0 right-0 w-1/3 h-1/3 bg-greenberry-500/10 rounded-full filter blur-3xl opacity-70 -translate-y-1/2 translate-x-1/3"></div>
      <div class="absolute bottom-0 left-0 w-1/3 h-1/3 bg-greenberry-500/10 rounded-full filter blur-3xl opacity-60 translate-y-1/2 -translate-x-1/3"></div>
    </div>
    
    <Container>
      <div class="grid grid-cols-1 lg:grid-cols-2 gap-12 items-center relative z-10">
        <div>
          <!-- Project category badge -->
          <div class="mb-4">
            <Badge text={project.category} variant="primary" size="md" class="bg-white/40 dark:bg-gray-800/40 backdrop-blur-md shadow-sm border border-white/20 dark:border-gray-700/20" />
          </div>
          
          <h1 class="text-4xl md:text-5xl font-bold text-gray-900 dark:text-white leading-tight mb-6">
            {project.title}
          </h1>
          
          <p class="text-xl text-gray-600 dark:text-gray-300 mb-8 leading-relaxed">
            {project.description}
          </p>
          
          <!-- Project details -->
          <div class="grid grid-cols-2 gap-6 mb-8">
            <div>
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">Client</h3>
              <p class="text-lg font-medium text-gray-900 dark:text-white">{project.client}</p>
            </div>
            <div>
              <h3 class="text-sm font-semibold text-gray-500 dark:text-gray-400 mb-1">Completed</h3>
              <p class="text-lg font-medium text-gray-900 dark:text-white">{project.completionDate}</p>
            </div>
          </div>
          
          <!-- Tags -->
          <div class="flex flex-wrap gap-2 mb-8">
            {project.tags && project.tags.map(tag => (
              <span class="text-sm font-medium py-1 px-3 rounded-full bg-white/80 dark:bg-gray-700/80 text-gray-700 dark:text-gray-300 backdrop-blur-sm border border-gray-100 dark:border-gray-600">
                {tag}
              </span>
            ))}
          </div>
          
          <!-- CTA buttons -->
          <div class="flex flex-col sm:flex-row gap-4">
            <Button href="/contact" size="lg" class="font-semibold shadow-lg shadow-greenberry-500/20">
              Start Your Project
              <span class="ml-2">â†’</span>
            </Button>
            
            <a 
              href="/portfolio" 
              class="px-6 py-3 rounded-lg font-medium border border-greenberry-500/40 bg-white dark:bg-gray-800/30 backdrop-blur-sm text-greenberry-700 dark:text-greenberry-300 hover:bg-white/50 dark:hover:bg-gray-800/50 transition-all duration-300 shadow-sm hover:shadow flex items-center justify-center"
            >
              <span class="mr-2"><i class="fa-solid fa-arrow-left"></i></span>
              All Projects
            </a>
          </div>
        </div>
        
        <div class="relative">
          <!-- Project showcase -->
          <div class="bg-white/90 dark:bg-gray-800/90 backdrop-blur-md rounded-xl shadow-xl overflow-hidden relative z-10 border border-white/40 dark:border-gray-700/40">
            <!-- Browser toolbar for website projects -->
            <div class="flex items-center gap-1.5 px-4 py-3 border-b border-gray-200/70 dark:border-gray-700/70 bg-gray-100/80 dark:bg-gray-800/80">
              <div class="flex gap-1.5">
                <div class="w-3 h-3 rounded-full bg-red-500"></div>
                <div class="w-3 h-3 rounded-full bg-yellow-500"></div>
                <div class="w-3 h-3 rounded-full bg-green-500"></div>
              </div>
              <div class="flex-1 ml-4">
                <div class="bg-white/70 dark:bg-gray-700/70 backdrop-blur-sm rounded-md text-xs px-3 py-1.5 text-center text-gray-600 dark:text-gray-300 flex items-center justify-center">
                  <span class="mr-2 text-xs text-gray-400"><i class="fa-solid fa-lock"></i></span>
                  {project.client && project.client.toLowerCase().replace(/\s+/g, '')}.ie
                </div>
              </div>
            </div>
            
            <!-- Project preview image -->
            <div class="aspect-video overflow-hidden">
              <img 
                src={project.image} 
                alt={project.title} 
                class="w-full h-full object-cover"
              />
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Project Details Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <Container>
      <!-- About Project as a Feature Card -->
      <div class="bg-gradient-to-br from-greenberry-50 to-greenberry-100 dark:from-greenberry-900/30 dark:to-greenberry-800/30 rounded-2xl p-10 border border-greenberry-200 dark:border-gray-700 mb-16 relative overflow-hidden group hover:shadow-lg hover:shadow-greenberry-500/10 transition-all duration-300">
        <!-- Background decorative elements -->
        <div class="absolute -top-20 -right-20 w-40 h-40 bg-greenberry-500/20 rounded-full filter blur-3xl opacity-70 group-hover:opacity-90 transition-opacity duration-700"></div>
        <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-greenberry-400/20 rounded-full filter blur-3xl opacity-60 group-hover:opacity-80 transition-opacity duration-700"></div>
        
        <div class="relative z-10">
          <div class="badge-wrapper mb-3">
            <Badge text="PROJECT OVERVIEW" variant="primary" size="md" />
          </div>
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-6">About The Project</h2>
          
          <div class="prose prose-lg dark:prose-invert max-w-none">
            {project.longDescription && project.longDescription.split('\n\n').map((paragraph, i) => (
              <p key={i} class="text-gray-700 dark:text-gray-300">{paragraph}</p>
            ))}
          </div>
        </div>
      </div>
      
      <!-- Challenge, Solution, Results Section -->
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6">
        {projectSteps.map((step) => (
          <div class={`group bg-white dark:bg-gray-800 rounded-lg shadow-sm hover:shadow-md transition-all duration-300 overflow-hidden border-t-4 ${step.borderColor}`}>
            <div class="p-6">
              <div class={`${step.textColor} text-4xl mb-4`}>
                <i class={step.icon}></i>
              </div>
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-3">
                {step.title}
              </h3>
              <p class="text-gray-600 dark:text-gray-300">
                {step.description}
              </p>
            </div>
          </div>
        ))}
      </div>
      
      <!-- Testimonial -->
      {project.testimonial && (
        <div class="mt-10 bg-white dark:bg-gray-800 p-8 rounded-xl shadow-md border border-gray-100 dark:border-gray-700">
          <div class="text-4xl text-greenberry-500/20 mb-4">
            <i class="fa-solid fa-quote-left"></i>
          </div>
          
          <blockquote class="text-lg italic text-gray-700 dark:text-gray-300 mb-6">
            {project.testimonial.quote}
          </blockquote>
          
          <div class="flex items-center">
            <div class="w-12 h-12 rounded-full bg-greenberry-100 dark:bg-greenberry-900 flex items-center justify-center text-greenberry-600 dark:text-greenberry-400 text-xl mr-4">
              <i class="fa-solid fa-user"></i>
            </div>
            <div>
              <p class="font-semibold text-gray-900 dark:text-white">{project.testimonial.author}</p>
              <p class="text-sm text-gray-600 dark:text-gray-400">{project.testimonial.position}</p>
            </div>
          </div>
        </div>
      )}
    </Container>
  </section>
  
  <!-- Project Gallery Section with Bento Grid -->
  {project.gallery && project.gallery.length > 0 && (
    <section class="py-16 bg-cool-gray-50 dark:bg-gray-800/50">
      <Container>
        <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-10 text-center">Project Gallery</h2>
        
        <div class="grid grid-cols-1 md:grid-cols-4 gap-4 auto-rows-[200px]">
          {project.gallery.map((image, index) => (
            <div class={`rounded-xl overflow-hidden shadow-md ${
              index === 0 ? "md:col-span-2 md:row-span-2" : 
              index === 1 ? "md:col-span-2" :
              "md:col-span-1"
            }`}>
              <img 
                src={image} 
                alt={`${project.title} - Gallery image ${index + 1}`} 
                class="w-full h-full object-cover"
              />
            </div>
          ))}
        </div>
      </Container>
    </section>
  )}
  
  <!-- CTA Section -->
  <section class="py-16 bg-white dark:bg-gray-900">
    <Container>
      <div class="bg-gradient-to-br from-greenberry-50 to-greenberry-100 dark:from-greenberry-900 dark:to-greenberry-800 rounded-2xl p-10 border border-greenberry-200 dark:border-greenberry-700 relative overflow-hidden group hover:shadow-lg hover:shadow-greenberry-500/10 transition-all duration-300">
        <!-- Background decorative elements -->
        <div class="absolute -top-20 -right-20 w-40 h-40 bg-greenberry-500/20 rounded-full filter blur-3xl opacity-70 group-hover:opacity-90 transition-opacity duration-700"></div>
        <div class="absolute -bottom-20 -left-20 w-40 h-40 bg-greenberry-400/20 rounded-full filter blur-3xl opacity-60 group-hover:opacity-80 transition-opacity duration-700"></div>
        
        <div class="relative z-10 max-w-3xl mx-auto text-center">
          <Badge text="START YOUR PROJECT" variant="primary" size="md" class="mb-4" />
          <h2 class="text-3xl font-bold text-gray-900 dark:text-white mb-4">
            Ready for a Website That Drives Results?
          </h2>
          <p class="text-xl text-gray-700 dark:text-gray-300 mb-8">
            Let's create a custom digital solution for your Irish business.
          </p>
          <Button href="/contact" size="lg" class="font-semibold shadow-lg shadow-greenberry-500/20">
            Get Your Free Consultation
            <span class="ml-2"><i class="fa-solid fa-arrow-right"></i></span>
          </Button>
        </div>
      </div>
    </Container>
  </section>
</Layout>

<style>
  @keyframes ping-slow {
    0% {
      transform: scale(1);
      opacity: 0.2;
    }
    50% {
      transform: scale(1.5);
      opacity: 0.1;
    }
    100% {
      transform: scale(1);
      opacity: 0.2;
    }
  }
  
  .animate-ping-slow {
    animation: ping-slow 5s infinite;
  }
</style>