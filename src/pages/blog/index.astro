---
import Layout from '../../layouts/Layout.astro';
import Container from '../../components/common/Container.astro';
import Button from '../../components/common/Button.astro';
import Badge from '../../components/ui/Badge.astro';

// Sample blog posts - In a real implementation, these would come from a CMS or Markdown files
const posts = [
  {
    title: "How to Choose the Right Web Hosting for Your Business",
    description: "Learn about the different types of web hosting and how to choose the best option for your specific business needs.",
    date: "February 20, 2025",
    author: "John Smith",
    image: "https://images.unsplash.com/photo-1444653389962-8149286c578a?q=80&w=2064&auto=format&fit=crop&ixlib=rb-4.0.3&ixid=M3wxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8fA%3D%3D",
    category: "Web Hosting",
    slug: "how-to-choose-right-web-hosting"
  },
  {
    title: "5 SEO Trends You Need to Know in 2025",
    description: "Stay ahead of the competition with these important SEO trends that will impact your website's visibility this year.",
    date: "February 15, 2025",
    author: "Sarah O'Connor",
    image: "https://images.unsplash.com/photo-1562577309-4932fdd64cd1?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80",
    category: "SEO",
    slug: "seo-trends-2025"
  },
  {
    title: "Why Website Speed Matters for Conversion Rates",
    description: "Discover how website loading speed directly impacts your conversion rates and what you can do to improve performance.",
    date: "February 10, 2025",
    author: "Michael Murphy",
    image: "https://images.unsplash.com/photo-1460925895917-afdab827c52f?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1115&q=80",
    category: "Performance",
    slug: "website-speed-conversion-rates"
  },
  {
    title: "Building Trust Online: Essential Elements for Business Websites",
    description: "Learn the key elements that help establish trust with your website visitors and convert them into loyal customers.",
    date: "February 5, 2025",
    author: "John Smith",
    image: "https://images.unsplash.com/photo-1552664730-d307ca884978?ixlib=rb-4.0.3&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1170&q=80",
    category: "Design",
    slug: "building-trust-online-business-websites"
  },
];

const categories = [
  "All",
  "Web Design",
  "Web Development",
  "SEO",
  "Performance",
  "Security",
  "Web Hosting",
];
---

<Layout title="Blog | Greenberry">
  <!-- Hero Section -->
  <section class="pt-20 pb-16 bg-green-50 dark:bg-gray-800 section-bg-decoration">
    <Container>
      <div class="max-w-3xl mx-auto text-center">
        <h1 class="heading-primary">
          Our Blog
        </h1>
        <p class="section-description">
          Insights, tips, and resources to help your business succeed online.
        </p>
      </div>
    </Container>
  </section>
  
  <!-- Category Filter -->
  <section class="pb-8 bg-white dark:bg-gray-900">
    <Container>
      <div class="flex flex-wrap justify-center gap-3">
        {categories.map((category, index) => (
          <a 
            href={index === 0 ? "/blog" : `/blog/category/${category.toLowerCase().replace(/\s+/g, '-')}`}
            class={`px-4 py-2 rounded-full text-sm font-medium transition-colors ${
              index === 0 
                ? "bg-greenberry-600 text-white hover:bg-greenberry-700" 
                : "bg-gray-100 text-gray-800 hover:bg-gray-200 dark:bg-gray-700 dark:text-gray-300 dark:hover:bg-gray-600"
            }`}
          >
            {category}
          </a>
        ))}
      </div>
    </Container>
  </section>
  
  <!-- Featured Post -->
  <section class="pb-12 bg-white dark:bg-gray-900">
    <Container>
      <div class="card overflow-hidden">
        <div class="grid grid-cols-1 lg:grid-cols-2">
          <div class="h-64 lg:h-auto relative group">
            <img 
              src={posts[0].image} 
              alt={posts[0].title}
              class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
            />
            <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
          </div>
          <div class="p-8 flex flex-col">
            <div class="mb-4">
              <Badge text={posts[0].category} variant="success" />
            </div>
            <h2 class="text-2xl lg:text-3xl font-bold text-gray-900 dark:text-white mb-4">
              <a href={`/blog/${posts[0].slug}`} class="hover:text-greenberry-600 dark:hover:text-greenberry-400 transition-colors">
                {posts[0].title}
              </a>
            </h2>
            <p class="text-gray-600 dark:text-gray-300 mb-6 flex-grow">
              {posts[0].description}
            </p>
            <div class="flex items-center justify-between mt-auto">
              <div class="flex items-center">
                <div class="font-medium text-gray-900 dark:text-white">
                  {posts[0].author}
                </div>
                <span class="mx-2 text-gray-500 dark:text-gray-400">â€¢</span>
                <div class="text-gray-500 dark:text-gray-400">
                  {posts[0].date}
                </div>
              </div>
              <a 
                href={`/blog/${posts[0].slug}`} 
                class="text-greenberry-600 hover:text-greenberry-700 dark:text-greenberry-400 dark:hover:text-greenberry-300 font-medium flex items-center group"
              >
                Read more
                <span class="ml-1 text-xs group-hover:translate-x-1 transition-transform duration-300">
                  <i class="fa-solid fa-arrow-right"></i>
                </span>
              </a>
            </div>
          </div>
        </div>
      </div>
    </Container>
  </section>
  
  <!-- Post Grid -->
  <section class="pb-20 bg-white dark:bg-gray-900">
    <Container>
      <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-8">
        {posts.slice(1).map((post) => (
          <div class="card overflow-hidden flex flex-col">
            <div class="relative h-48 group">
              <img 
                src={post.image} 
                alt={post.title}
                class="w-full h-full object-cover group-hover:scale-105 transition-transform duration-500"
              />
              <div class="absolute inset-0 bg-gradient-to-t from-black/50 to-transparent opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
              <div class="absolute top-4 left-4">
                <Badge text={post.category} variant="success" />
              </div>
            </div>
            <div class="p-6 flex flex-col flex-grow">
              <h3 class="text-xl font-bold text-gray-900 dark:text-white mb-2">
                <a href={`/blog/${post.slug}`} class="hover:text-greenberry-600 dark:hover:text-greenberry-400 transition-colors">
                  {post.title}
                </a>
              </h3>
              <p class="text-gray-600 dark:text-gray-300 mb-4 flex-grow">
                {post.description}
              </p>
              <div class="flex items-center justify-between mt-auto">
                <div class="text-sm text-gray-500 dark:text-gray-400">
                  {post.date}
                </div>
                <a 
                  href={`/blog/${post.slug}`} 
                  class="text-greenberry-600 hover:text-greenberry-700 dark:text-greenberry-400 dark:hover:text-greenberry-300 font-medium flex items-center text-sm group"
                >
                  Read more
                  <span class="ml-1 text-xs group-hover:translate-x-1 transition-transform duration-300">
                    <i class="fa-solid fa-arrow-right"></i>
                  </span>
                </a>
              </div>
            </div>
          </div>
        ))}
      </div>
    </Container>
  </section>
</Layout>